{
  "buttonAttrs": {
    "type": "group",
    "values": [
      {
        "type": "attribute",
        "key": "bsStyle",
        "value": {
          "label": "Style",
          "type": "select",
          "optional": true,
          "values": [
            {
              "label": "Primary",
              "value": "primary"
            },
            {
              "label": "Success",
              "value": "success"
            },
            {
              "label": "Info",
              "value": "info"
            },
            {
              "label": "Warning",
              "value": "warning"
            },
            {
              "label": "Danger",
              "value": "danger"
            },
            {
              "label": "Link",
              "value": "link"
            }
          ]
        }
      },
      {
        "type": "attribute",
        "key": "bsSize",
        "value": {
          "label": "Size",
          "type": "select",
          "optional": true,
          "values": [
            {
              "label": "Large",
              "value": "large"
            },
            {
              "label": "Small",
              "value": "small"
            },
            {
              "label": "Extra small",
              "value": "xsmall"
            }
          ]
        }
      },
      {
        "label": "Open Upward",
        "type": "switch",
        "on": "dropup"
      },
      {
        "label": "Align Menu to Right of Button",
        "type": "switch",
        "on": "pullRight"
      }
    ]
  }
}
